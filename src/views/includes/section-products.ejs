<section class="flex flex-col animate-slide-in-left delay-300">
    <div class="flex justify-center gap-20 my-14">
        <button id="btn-12"
            class="btns text-xl text-orange-500 font-bold uppercase p-2 border-b-2 border-orange-500">Aro 12</button>
        <button id="btn-16" class="btns text-xl text-orange-500 font-bold uppercase p-2">Aro 16</button>
        <button id="btn-20" class="btns text-xl text-orange-500 font-bold uppercase p-2">Aro 20</button>
        <button id="btn-24" class="btns text-xl text-orange-500 font-bold uppercase p-2">Aro 24</button>
        <button id="btn-26" class="btns text-xl text-orange-500 font-bold uppercase p-2">Aro 26</button>
        <button id="btn-29" class="btns text-xl text-orange-500 font-bold uppercase p-2">Aro 29</button>
    </div>

    <div class="bikes-table max-w-screen-lg self-center mx-auto grid gap-10 grid-cols-3">

        <% let contador=0 %>
            <% bike.forEach(item=> { %>
                <% if (contador < 3) { %>
                    <a href="#" class="bike-card" data-aro="<%= item.aro %>">
                        <div class="cards">
                            <div class="w-full aspect-square flex items-center justify-center">
                                <img src="<%= item.imagem %>" alt="<%= item.nome.toUpperCase() %>" class="object-contain w-full h-full">
                            </div>
                            <div class="p-4 text-center space-y-2">
                                <h3 class="font-semibold text-lg text-gray-800 uppercase">
                                    <%= item.nome.toUpperCase() %>
                                </h3>
                                <p class="text-2xl font-bold text-gray-900">10x de <%= (item.preco / 10).toFixed(2).replace('.', ',') %>
                                        s/juros</p>
                                <p class="text-base text-gray-500">ou Ã  vista de R$<%= item.avista.toFixed(2).replace('.', ',') %>
                                </p>
                            </div>
                        </div>
                    </a>
                    <% contador++ %>
                        <% } %>
                            <% }) %>

    </div>
    <button class="self-center my-14 p-4 btn-ok"><span class="uppercase font-bold">Visualizar Tudo</span></button>
</section>