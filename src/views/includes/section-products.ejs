<section id="bicicletas" class="flex flex-col animate-slide-in-left delay-300">
    <div class="flex justify-center gap-20 my-14">
        <a href="?aro=12#bicicletas" id="btn-12" class="btns text-xl text-orange-500 font-bold uppercase p-2 border-b-2 border-orange-500">Aro 12</a>
        <a href="?aro=16#bicicletas" id="btn-16" class="btns text-xl text-orange-500 font-bold uppercase p-2">Aro 16</a>
        <a href="?aro=20#bicicletas" id="btn-20" class="btns text-xl text-orange-500 font-bold uppercase p-2">Aro 20</a>
        <a href="?aro=24#bicicletas" id="btn-24" class="btns text-xl text-orange-500 font-bold uppercase p-2">Aro 24</a>
        <a href="?aro=26#bicicletas" id="btn-26" class="btns text-xl text-orange-500 font-bold uppercase p-2">Aro 26</a>
        <a href="?aro=29#bicicletas" id="btn-29" class="btns text-xl text-orange-500 font-bold uppercase p-2">Aro 29</a>
    </div>

    <div class="bikes-table max-w-screen-lg self-center mx-auto grid gap-10 grid-cols-3">

        <% let contador = 0 %>
            <% bike.forEach(item => { %>
                <% if (contador < 3) { %>
                    <a href="#">
                        <div class="cards">
                            <div class="w-full aspect-square flex items-center justify-center">
                                <img src="<%= item.imagem %>" alt="<%= item.nome.toUpperCase() %>" class="object-contain w-full h-full">
                            </div>
                            <div class="p-4 text-center space-y-2">
                                <h3 class="font-semibold text-lg text-gray-800 uppercase">
                                    <%= item.nome.toUpperCase() %>
                                </h3>
                                <p class="text-2xl font-bold text-gray-900">10x de <%= (item.preco / 10).toFixed(2).replace('.', ',') %> s/juros</p>
                                <p class="text-base text-gray-500">ou Ã  vista de R$<%= item.avista.toFixed(2).replace('.', ',') %>
                                </p>
                            </div>
                        </div>
                    </a>
                    <% contador++ %>
                <% } %>
            <% }) %>

    </div>
    <a href="/produtos" class="self-center my-14 p-4 btn-ok cursor-pointer"><span class="uppercase font-bold">Visualizar Tudo</span></a>
</section>