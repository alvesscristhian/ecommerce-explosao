<%- include('includes/layout/head'); %>

    <div class="flex min-h-screen bg-gray-100">

        <%- include('includes/components/nav-painel'); %>

            <section id="nova-bike" class="bg-white p-8 rounded-xl shadow w-10/12">
                <%- include('includes/components/messages') %>
                <h2 class="text-2xl font-bold mb-6 text-gray-800">
                    Cadastrar nova bicicleta
                </h2>

                <form action="/admin/bike" method="POST" enctype="multipart/form-data"
                    class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label class="block mb-1 text-gray-600">Nome do modelo</label>
                        <input type="text" name="nome" required class="w-full border rounded-lg px-4 py-2" />
                    </div>

                    <div>
                        <label class="block mb-1 text-gray-600">Aro</label>
                        <select name="aro" class="w-full border rounded-lg px-4 py-2">
                            <option>12</option>
                            <option>16</option>
                            <option>20</option>
                            <option>24</option>
                            <option>26</option>
                            <option>29</option>
                        </select>
                    </div>

                    <div>
                        <label class="block mb-1 text-gray-600">Preço (10x s/juros)</label>
                        <input type="number" name="preco" step="0.01" required
                            class="w-full border rounded-lg px-4 py-2" />
                    </div>

                    <div>
                        <label class="block mb-1 text-gray-600">Preço (à vista)</label>
                        <input type="number" name="avista" step="0.01" required
                            class="w-full border rounded-lg px-4 py-2" />
                    </div>

                    <div class="md:col-span-2">
                        <label class="block mb-1 text-gray-600">Descrição do produto</label>
                        <textarea name="descricao" rows="5" required
                            class="w-full border rounded-lg px-4 py-2"></textarea>
                    </div>

                    <div class="md:col-span-2">
                        <label class="block mb-1 text-gray-600">
                            Selecionar imagem
                        </label>
                        <label for="imagem-bike"
                            class="flex w-full cursor-pointer items-center justify-center gap-3 rounded-lg border-2 border-orange-50 bg-black px-4 py-2 text-orange-500 font-semibold transition-all duration-200 hover:bg-orange-500 hover:text-black">

                            <svg xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 transition-transform group-hover:scale-110" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1M12 12v9m0-9l-3 3m3-3l3 3M12 3v9" />
                            </svg>
                        </label>
                        <input type="file" id="imagem-bike" name="imagem" accept="image/*" class="hidden" />
                        <p id="nome-imagem" class="mt-2 text-sm text-gray-400 text-center">
                            Nenhuma imagem selecionada
                        </p>
                    </div>

                    <div class="md:col-span-2">
                        <button type="submit"
                            class="bg-black text-white px-8 py-3 rounded-full hover:bg-orange-500 transition">
                            Cadastrar Bike
                        </button>
                    </div>

                </form>
            </section>
            <%- include('includes/layout/footer'); %>