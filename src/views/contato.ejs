<%- include('includes/layout/head'); %>
    <%- include('includes/components/navbar') %>

        <section class="min-h-screen bg-gradient-to-br from-zinc-950 via-zinc-900 to-zinc-800 text-white py-20">
            <div class="max-w-7xl mx-auto px-6">

                <div class="text-center mb-16">
                    <h1 class="text-4xl md:text-5xl font-bold">
                        Fale <span class="text-orange-500">Conosco</span>
                    </h1>
                    <p class="text-gray-300 mt-4 max-w-xl mx-auto">
                        Para mais informações, entre em contato conosco através do formulário abaixo.
                    </p>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                    <form action="https://formsubmit.co/grupoexplosaobike@gmail.com"
                        class="space-y-5 bg-zinc-900/60 p-8 rounded-2xl backdrop-blur border border-white/10"
                        method="POST">

                        <input type="hidden" name="_captcha" value="false">

                        <input type="text" name="name" placeholder="Nome"
                            class="w-full px-4 py-3 rounded-lg bg-zinc-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500"
                            required />

                        <input type="email" name="email" placeholder="E-mail"
                            class="w-full px-4 py-3 rounded-lg bg-zinc-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500"
                            required />

                        <input type="text" name="_subject" placeholder="Assunto"
                            class="w-full px-4 py-3 rounded-lg bg-zinc-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500"
                            required />

                        <input type="tel" name="phone" placeholder="Telefone"
                            class="w-full px-4 py-3 rounded-lg bg-zinc-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500"
                            required />

                        <textarea rows="4" name="message" placeholder="Mensagem"
                            class="w-full px-4 py-3 rounded-lg bg-zinc-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500"
                            required></textarea>

                        <button type="submit"
                            class="w-full bg-orange-500 hover:bg-orange-600 transition font-semibold py-3 rounded-lg text-black">
                            Enviar mensagem
                        </button>
                    </form>

                    <div class="space-y-6">

                        <div>
                            <h3 class="text-2xl font-bold text-orange-500 mb-2">Nossa Localização</h3>
                            <h3 class="nome text-white font-semibold text-xl mb-2">Loja 1</h3>
                            <h4 class="endereco text-gray-300">R. Dom Duarte da Costa, 304 - Vila Jockei Clube</h4>
                        </div>


                        <div class="rounded-2xl overflow-hidden border border-white/10 h-96">
                            <div class="relative">

                                <button class="back-map absolute left-4 top-1/2 -translate-y-1/2 z-10 bg-black/70 hover:bg-orange-600
                       text-white text-3xl px-4 py-2 rounded-full transition">
                                    &lt;
                                </button>

                                <button class="next-map absolute right-4 top-1/2 -translate-y-1/2 z-10 bg-black/70 hover:bg-orange-600 text-white text-3xl px-4 py-2 rounded-full transition">
                                    &gt;
                                </button>

                                <iframe class="map-frame"
                                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3646.3001530730758!2d-46.39642092384249!3d-23.94982407598018!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce1b7a7c312c1d%3A0xe5e230dae59be411!2sExplos%C3%A3o%20Bike!5e0!3m2!1spt-BR!2sbr!4v1768277800399!5m2!1spt-BR!2sbr"
                                    class="w-full h-96" style="border:0;" allow="fullscreen" width="600" height="400" loading="lazy"
                                    referrerpolicy="no-referrer-when-downgrade">
                                </iframe>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>


        <%- include('includes/components/footer-index'); %>
            <%- include('includes/layout/footer'); %>