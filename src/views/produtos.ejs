<%- include('includes/layout/head'); %>
<%- include('includes/components/navbar') %>

<div class="max-w-7xl mx-auto px-4 py-8">

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-10">

        <aside class="lg:col-span-1 space-y-6">

            <div>
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">
                    Filtrar
                </h2>

                <div class="space-y-2 mt-6">
                    <h3 class="text-sm font-semibold uppercase text-gray-500">
                        Aro
                    </h3>

                    <% [16,20,24,26,29].forEach(aro => { %>
                        <a href="/produtos?aro=<%= aro %>"
                           class="block transition
                           <%= filtrosSelecionados?.aro == aro
                                ? 'text-red-600 font-semibold'
                                : 'text-gray-700 hover:text-black' %>">
                            <%= aro %>
                        </a>
                    <% }) %>

                    <% if (filtrosSelecionados?.aro) { %>
                        <a href="/produtos"
                           class="text-red-500 text-sm mt-2 block">
                            Limpar filtros
                        </a>
                    <% } %>
                </div>

            </div>
        </aside>

        <section class="lg:col-span-3 space-y-6">

            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">

                <p class="text-gray-600 text-sm">
                    Exibindo <%= produtos.length %> resultados
                </p>

                <form method="GET" action="/produtos">
                    <select name="ordenar"
                        onchange="this.form.submit()"
                        class="border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-gray-300">

                        <option value="">Ordenação padrão</option>
                        <option value="menor-preco">Menor preço</option>
                        <option value="maior-preco">Maior preço</option>
                    </select>
                </form>

            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

                <% produtos.forEach(item => { %>

                    <a href="#">
                        <div class="cards bg-white rounded-xl shadow-sm">

                            <div class="w-full aspect-square flex items-center justify-center bg-gray-50 rounded-t-xl p-4">
                                <img src="<%= item.imagem %>"
                                 alt="<%= item.nome.toUpperCase() %>"
                                 class="object-contain w-full h-full">
                            </div>

                            <div class="p-4 text-center space-y-2">

                                <h3 class="font-semibold text-lg text-gray-800 uppercase">
                                <%= item.nome.toUpperCase() %>
                                </h3>

                                <p class="text-2xl font-bold text-gray-900">
                                10x de R$
                                <%= (item.preco / 10).toFixed(2).replace('.', ',') %>
                                </p>

                                <p class="text-base text-gray-500">
                                ou à vista de R$
                                <%= item.avista.toFixed(2).replace('.', ',') %>
                                </p>

                            </div>

                        </div>
                    </a>

                <% }) %>

            </div>

        </section>

    </div>

</div>
<%- include('includes/layout/footer'); %>